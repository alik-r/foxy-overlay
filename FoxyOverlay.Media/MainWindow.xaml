<Window x:Class="FoxyOverlay.Media.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Foxy Overlay Config" Height="350" Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,5">
            <TextBlock Text="Chance denominator (1/X):" VerticalAlignment="Center"/>
            <TextBox x:Name="ChanceXBox" Width="80" Margin="5,0"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,5">
            <TextBlock Text="Cooldown seconds:" VerticalAlignment="Center"/>
            <TextBox x:Name="CooldownBox" Width="50" Margin="5,0"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0,5">
            <TextBlock Text="Video file:" VerticalAlignment="Center"/>
            <TextBox x:Name="VideoPathBox" Width="200" Margin="5,0"/>
            <Button Content="Browse" Click="Browse_Click"/>
        </StackPanel>

        <CheckBox x:Name="MuteCheck" Grid.Row="3" Content="Mute audio" Margin="0,5"/>

        <StackPanel Orientation="Horizontal" Grid.Row="4" HorizontalAlignment="Right" Margin="0,10">
            <Button Content="Save and Restart" Margin="5" Click="SaveRestart_Click"/>
            <Button Content="Exit" Margin="5" Click="Exit_Click"/>
        </StackPanel>
    </Grid>
</Window>